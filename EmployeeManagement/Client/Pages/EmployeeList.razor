@page "/"
@inherits EmployeeListBase
<h3>Employee List</h3>


@if (Employees == null)
{

    <div class="spinner-border"></div>
}

else{
<div class="card-group">
    @foreach(var employee in Employees)
    {
        <div class=" card m-2 " style="min-width:10rem; max-width:25.5%;">
            <div class="card-header">
              <h3> @employee.FirstName @employee.LastName</h3>
            </div>

            <img class="card-img-top imageTumbnail" src="@employee.PhotoPath"/>

            <div class="card-footer text-center">
                <a href="#" class=" btn btn-primary m-1"> View </a>
                <a href="#" class=" btn btn-primary m-1"> Edit </a>
                <a href="#" class=" btn btn-primary m-1"> Delete </a>
            </div>

        </div>
    }


</div>
}